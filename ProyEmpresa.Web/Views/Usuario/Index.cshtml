
@{
    ViewBag.Title = "Index";
}

<h2>Lista de Usuarios</h2>


<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Registrar
</button>
<table class="table-bordered" id="MyTabla">
    <thead>
        <tr>
            <td>User Cod</td>
            <td>Name</td>
            <td>Date</td>
            <td>Area</td>
        </tr>
    </thead>
    <tbody>


        @foreach (var item in (ViewBag.ListaUsuarios))
        {
        <tr>
            <td> @item.codigo_usuario </td>
            <td> @item.nombre </td>
            <td> @item.fecha_ingreso </td>
            <td> @item.descripcion </td>
        </tr>
        }

        </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row" style="margin-bottom: 10px">
                        <div class="col-lg-6">
                            Nombre Usuario
                        </div>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" placeholder="Ingrese Nombre" id="txtNombre" />
                        </div>
                    </div>

                    <div class="row" style="margin-bottom: 10px">
                        <div class="col-lg-6">
                            Contraseña
                        </div>
                        <div class="col-lg-6">
                            <input type="password" class="form-control" placeholder="Ingrese Contraseña" id="txtContrasena" />
                        </div>
                    </div>

                    <div class="row" style="margin-bottom: 10px">
                        <div class="col-lg-6">
                            Fecha Ingreso
                        </div>
                        <div class="col-lg-6">
                            <input type="date" class="form-control" id="txtFecIng" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            Area
                        </div>
                        <div class="col-lg-6">
                            <select class="form-control" id="lstArea"> 
                                <option value="1">ALMACEN</option>
                                <option value="2">VENTAS</option>
                                <option value="3">COMPRAS</option>
                            </select>
                        </div>
                    </div>


                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnSave">Save changes</button>
            </div>
        </div>
    </div>
</div>



<link href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet" />

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>



<script>

    $("#MyTabla").DataTable();



    $("#btnSave").click(function () {
        Registrar();
    });


    function Registrar() {

        var nombre = $("#txtNombre").val();
        var contra = $("#txtContrasena").val();
        var FecIng = $("#txtFecIng").val();
        var codarea = $("#lstArea").val();

        var param = {
            "codigo_usuario": 0,
            "nombre": nombre,
            "contrasena": contra,
            "fecha_ingreso": FecIng,
            "codigo_area": codarea
        };

        $.ajax({
            type: "POST",
            url: '/Usuario/Registro',
            dataType: "JSON",
            data: {"ent_Usuario":  param} ,
            success: function (respuesta) {
                $("#exampleModal").modal("hide");
                location.reload();
            },
            error: function () {
                console.log("No se ha podido obtener la información");
            }
        });
    }







</script>











